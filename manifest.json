{
  "manifest_version": 3,
  "name": "DeepSeek Auto Next V3",
  "version": "1.0.0",
  "description": "Auto-sends a next chapter prompt when DeepSeek stops generating.",
  "permissions": ["storage"],
  "host_permissions": ["https://chat.deepseek.com/*"],

  "icons": {
    "16": "icons/icons16.png",
    "32": "icons/icons32.png",
    "48": "icons/icons48.png",
    "128": "icons/icons128.png"
  },

  "action": {
    "default_title": "DeepSeek Auto Next",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons16.png",
      "32": "icons/icons32.png",
      "48": "icons/icons48.png",
      "128": "icons/icons128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
